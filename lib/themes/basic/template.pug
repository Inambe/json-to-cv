doctype html
head
	meta(charset='UTF-8')
	meta(name='viewport' content='width=device-width, initial-scale=1.0')
	title #{name} - #{position}
	link(rel='stylesheet' href='style.css')
body
	.container
		.header
			.name
				h1= name
				h3= position
			.contact
				if email
					label Email: 
					span= email
				if phone
					br
					label Phone: 
					span= phone
		if $summery
			.about!= $summery
		.details
			if experience
				.section
					.section__title= experience.title || "Experience"
					.section__content
						each exp in experience.list
							.flex.justify-space-between
								.col
									.text-bold= exp.company
									.addr= exp.address
									.duration= exp.duration
								.col
									.text-bold= exp.role
									.desc!= exp.$description
			if eduction
				.section
					.section__title= eduction.title || "Education"
					.section__content
						each edu in eduction.list
							.flex
								.col
									.text-bold= edu.institute
									.addr= edu.address
									.duration= edu.duration
								.col
									.text-bold= edu.degree
									.desc!= edu.$description
			if projects
				.section
					.section__title= projects.title || "Projects"
					.section__content
						each project in projects.list
							.mb-1p5
								.text-bold= project.name
								.text!= project.$description
			if skills
				.section
					.section__title= skills.title || "Skills"
					.section__content
						each skill in skills.list
							p.p-name #{skill.name}
			if interests
				.section
					.section__title= interests.title || "Interests"
					.section__content
						each interest in interests.list
							p.p-name= interest.name
